{{#extend "section"}}
{{#content "content"}}
<form class="simple-form" action="/" method="post" name="" novalidate>
  <h3 class="simple-form__heading">Заполните форму и запишитесь на посещение объекта, где сейчас работают
    наши монтажники</h3>
  <div class="simple-form__inputs">
    {{> parts/form-input name="name" placeholder="Ваше имя"}}
    {{> parts/form-input name="phone" placeholder="Телефон для связи"}}
  </div>
  <div class="simple-form__bottom">
    <a class="button" href="#">Отправить</a>
    {{> parts/policy-checkbox mod="--dark"}}
  </div>
</form>
{{/content}}
{{/extend}}