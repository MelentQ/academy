<div class="menu">
  <div>
    <div class="menu__top">
      <div class="menu__contacts">
        <a class="menu__contact-icon --viber" href="#" title="Viber">
          <svg>
            <use xlink:href="#viber">
          </svg>
        </a>
        <a class="menu__contact-icon --wa" href="#" title="WA">
          <svg>
            <use xlink:href="#wa">
          </svg>
        </a>
        <a class="menu__contact" href="tel:+79323211118">+7 932 321-11-18</a>
      </div>
      <button class="menu__close menu-close">
        <svg>
          <use xlink:href="#close">
        </svg>
      </button>
    </div>
    <nav class="menu__content js-menu-tabs">
      <ul class="menu__list active" data-group="root">
        {{#each menu}}
        <li class="menu__item">
          <a class="menu__link" href="#">{{this.name}}</a>
          {{#if this.items}}
          <button class="menu__next-group menu__nav-button" type="button" data-group="{{this.id}}">
            <svg>
              <use xlink:href="#chevron">
            </svg>
          </button>
          {{/if}}
        </li>
        {{/each}}
      </ul>

      {{#each menu}}
      {{#if this.items}}
      <ul class="menu__list" data-group="{{this.id}}">
        <li class="menu__item menu__item-back">
          <button class="menu__prev-group menu__nav-button" type="button" data-group="root">
            <svg>
              <use xlink:href="#chevron">
            </svg>
          </button>
          <a class="menu__link" href="#">{{this.name}}</a>
        </li>
        {{#each this.items}}
        <li class="menu__item">
          <a class="menu__link" href="#">{{this.name}}</a>
          {{#if this.items}}
          <button class="menu__next-group menu__nav-button" type="button" data-group="{{this.id}}">
            <svg>
              <use xlink:href="#chevron">
            </svg>
          </button>
          {{/if}}
        </li>
        {{/each}}
      </ul>
      {{/if}}
      {{/each}}

      {{#each menu}}
      {{#if this.items}}
      {{#each this.items}}
      {{#if this.items}}
      <ul class="menu__list" data-group="{{this.id}}">
        <li class="menu__item menu__item-back">
          <button class="menu__prev-group menu__nav-button" type="button" data-group="{{../this.id}}">
            <svg>
              <use xlink:href="#chevron">
            </svg>
          </button>
          <a class="menu__link" href="#">{{this.name}}</a>
        </li>
        {{#each this.items}}
        <li class="menu__item">
          <a class="menu__link" href="#">{{this.name}}</a>
          {{#if this.items}}
          <button class="menu__next-group menu__nav-button" type="button" data-group="{{this.id}}">
            <svg>
              <use xlink:href="#chevron">
            </svg>
          </button>
          {{/if}}
        </li>
        {{/each}}
      </ul>
      {{/if}}
      {{/each}}
      {{/if}}
      {{/each}}
    </nav>
  </div>
  <div class="menu__bottom">
    <div class="menu__info">
      <span class="menu__address">Харьковская 83А/4 офис 520</span>
      <span class="menu__time">Пн–Пт 9:00 - 18:00, Сб 10:00 - 18:00</span>
    </div>
    <a class="button" href="#" data-modal="#order" data-block="Меню">Позвоните мне</a>
  </div>
</div>