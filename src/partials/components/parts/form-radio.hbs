<div class="js-form-radio form-radio {{data.mod}}">
  <input type="hidden" name="{{data.name}}" value="{{data.initialValue}}">
  <button class="form-radio__select" type="button">
    <div class="form-radio__select-label-wrapper">
      {{#if data.initialImage}}
      <div class="form-radio__select-image-wrapper">
        <img class="lazyload" data-src="{{data.initialImage}}" alt="Quiz">
      </div>
      {{/if}}
      <span class="form-radio__select-label">{{data.initialValue}}</span>
    </div>
    <svg>
      <use xlink:href="#chevron">
    </svg>
  </button>
  <ul class="form-radio__list">
    {{#each data.items}}
    <li>
      <a class="js-button form-radio__item {{#if this.active}}active{{/if}}" href="#" data-value="{{this.value}}">
        {{#if this.image}}
        <div class="form-radio__image-wrapper">
          <img class="lazyload" data-src="{{this.image}}" alt="Quiz">
        </div>
        {{/if}}
        <span class="form-radio__name">{{this.name}}</span>
      </a>
    </li>
    {{/each}}
  </ul>
</div>